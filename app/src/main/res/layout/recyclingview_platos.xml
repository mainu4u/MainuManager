<?xml version="1.0" encoding="utf-8"?>
<!-- Plantilla para el recycling view de los Bocadillos, se representara en funcion de este layout-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:id="@+id/layoutPlato">

    <TextView
        android:id="@+id/nombrePlato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_light"
        android:maxWidth="200dp"
        android:text="@string/nombre"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tipoPlato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="65dp"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/roboto_light"
        android:text="@string/app_name"
        android:textColor="@color/negro"
        android:textSize="15sp" />

    <ImageButton
        android:id="@+id/botonAceptarPlato"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@color/transparente"
        app:srcCompat="@drawable/aceptar" />

    <ImageButton
        android:id="@+id/botonCancelarPlato"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@color/transparente"
        app:srcCompat="@drawable/cancelar" />




</RelativeLayout>